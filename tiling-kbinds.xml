<!-- Copy and paste these keybinds into '~/.config/openbox/rc.xml'

     Ensure that any existing clashes in the rc.xml are removed first
     
-->

    <!-- Tiling keybinds -->
    <keybind key="C-Right">
      <action name="GrowToEdgeEast"/>
    </keybind>
    <keybind key="C-Left">
      <action name="GrowToEdgeWest"/>
    </keybind>
    <keybind key="C-Down">
      <action name="GrowToEdgeSouth"/>
    </keybind>
    <keybind key="C-Up">
      <action name="GrowToEdgeNorth"/>
    </keybind>
    <keybind key="W-KP_4">
      <!-- Left half of screen -->
      <action name="UnmaximizeFull"/>
      <action name="MaximizeVert"/>
      <action name="Raise"/>
      <action name="MoveResizeTo">
        <width>50%</width>
        <x>0</x>
        <y>0</y>
      </action>
    </keybind>
    <keybind key="W-KP_6">
      <!-- Right half of screen -->
      <action name="UnmaximizeFull"/>
      <action name="MaximizeVert"/>
      <action name="Raise"/>
      <action name="MoveResizeTo">
        <width>50%</width>
        <x>50%</x>
        <y>0</y>
      </action>
    </keybind>
    <keybind key="W-KP_8">
      <!-- Top half of screen -->
      <action name="UnmaximizeFull"/>
      <action name="Raise"/>
      <action name="MoveResizeTo">
        <x>0</x>
        <y>0</y>
        <width>100%</width>
        <height>50%</height>
      </action>
    </keybind>
    <keybind key="W-KP_2">
      <!-- Bottom half of screen -->
      <action name="UnmaximizeFull"/>
      <action name="Raise"/>
      <action name="MoveResizeTo">
        <x>0</x>
        <y>50%</y>
        <width>100%</width>
        <height>50%</height>
      </action>
    </keybind>
    <keybind key="W-KP_7">
      <!-- Top left quarter -->
      <action name="UnmaximizeFull"/>
      <action name="Raise"/>
      <action name="MoveResizeTo">
        <x>0</x>
        <y>0</y>
        <width>50%</width>
        <height>50%</height>
      </action>
    </keybind>
    <keybind key="W-KP_9">
      <!-- Top right quarter -->
      <action name="UnmaximizeFull"/>
      <action name="Raise"/>
      <action name="MoveResizeTo">
        <x>50%</x>
        <y>0</y>
        <width>50%</width>
        <height>50%</height>
      </action>
    </keybind>
    <keybind key="W-KP_1">
      <!-- Bottom left quarter -->
      <action name="UnmaximizeFull"/>
      <action name="Raise"/>
      <action name="MoveResizeTo">
        <x>0</x>
        <y>50%</y>
        <width>50%</width>
        <height>50%</height>
      </action>
    </keybind>
    <keybind key="W-KP_3">
      <!-- Bottom right quarter -->
      <action name="UnmaximizeFull"/>
      <action name="Raise"/>
      <action name="MoveResizeTo">
        <x>50%</x>
        <y>50%</y>
        <width>50%</width>
        <height>50%</height>
      </action>
    </keybind>
    <keybind key="W-KP_5">
      <!-- Centered -->
      <action name="UnmaximizeFull"/>
      <action name="Raise"/>
      <action name="MoveResizeTo">
        <x>center</x>
        <y>center</y>
        <width>50%</width>
        <height>75%</height>
      </action>
    </keybind>
    <keybind key="W-A-Right">
      <!-- Move to Right edge -->
      <action name="MoveToEdge">
        <direction>east</direction>
      </action>
    </keybind>
    <keybind key="W-A-Left">
      <!-- Move to Left edge -->
      <action name="MoveToEdge">
        <direction>west</direction>
      </action>
    </keybind>
    <keybind key="W-A-Up">
      <!-- Move to Top edge -->
      <action name="MoveToEdge">
        <direction>north</direction>
      </action>
    </keybind>
    <keybind key="W-A-Down">
      <!-- Move to Bottom edge -->
      <action name="MoveToEdge">
        <direction>south</direction>
      </action>
    </keybind>
    <!-- Move to corner -->
    <keybind key="W-A-KP_9">
      <action name="Raise"/>
      <action name="MoveResizeTo"> <!-- put the window in the top right corner -->
        <x>-0</x>
        <y>0</y>
      </action>
    </keybind>
    <keybind key="W-A-KP_3">
      <action name="Raise"/>
      <action name="MoveResizeTo"> <!-- put the window in the bottom right corner -->
        <x>-0</x>
        <y>-0</y>
      </action>
    </keybind>
    <keybind key="W-A-KP_1">
      <action name="Raise"/>
      <action name="MoveResizeTo"> <!-- put the window in the bottom left corner -->
        <x>0</x>
        <y>-0</y>
      </action>
    </keybind>
    <keybind key="W-A-KP_7">
      <action name="Raise"/>
      <action name="MoveResizeTo"> <!-- put the window in the top left corner -->
        <x>0</x>
        <y>0</y>
      </action>
    </keybind>
    <!-- Move/Resize -->
    <keybind key="W-A-r">
      <action name="Resize"/>
    </keybind>
    <keybind key="W-A-m">
      <action name="Move"/>
    </keybind>

